<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountryDetailActivity"
    tools:ignore="MissingDefaultResource">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/flag"
            android:layout_width="161dp"
            android:layout_height="107dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_name_text" />


        <TextView
            android:id="@+id/country_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="Country_name"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/the_description"
            android:layout_width="408dp"
            android:layout_height="86dp"
            android:text="whatever"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.custom.sliderimage.logic.SliderImage
            android:id="@+id/slider"
            android:layout_width="147dp"
            android:layout_height="143dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/ressources_tv"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="@+id/ressources_tv"
            app:layout_constraintTop_toBottomOf="@+id/ressources_tv">

        </com.custom.sliderimage.logic.SliderImage>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Natural Resources"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/the_description" />

        <TextView
            android:id="@+id/ressources_tv"
            android:layout_width="137dp"
            android:layout_height="124dp"
            android:layout_marginTop="8dp"
            android:text="something"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/surface"
            android:layout_width="183dp"
            android:layout_height="43dp"
            android:layout_marginTop="28dp"
            android:text="you know"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_name_text" />

        <TextView
            android:id="@+id/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="dunno man"
            app:layout_constraintEnd_toEndOf="@+id/surface"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/surface"
            app:layout_constraintTop_toBottomOf="@+id/surface" />

        <Button
            android:id="@+id/hymne_btn"
            android:layout_width="158dp"
            android:layout_height="38dp"
            android:text="National Anthem"
            app:layout_constraintEnd_toEndOf="@+id/flag"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="@+id/flag"
            app:layout_constraintTop_toBottomOf="@+id/flag" />

        <Button
            android:id="@+id/video_btn"
            android:layout_width="103dp"
            android:layout_height="57dp"
            android:layout_marginTop="36dp"
            android:text="videos"
            app:layout_constraintEnd_toEndOf="@+id/population"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/population"
            app:layout_constraintTop_toBottomOf="@+id/population" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Description"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hymne_btn" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/famous_people"
            android:layout_width="256dp"
            android:layout_height="265dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:text="Popular Figures"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>