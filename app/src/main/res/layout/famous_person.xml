<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:background="#00FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="185dp"
            android:layout_height="143dp"
            android:background="#2A77B5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageButton
                android:id="@+id/personPic"
                android:layout_width="72dp"
                android:layout_height="68dp"
                android:contentDescription="Pays"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/algeria_flag" />

            <TextView
                android:id="@+id/personName"
                android:layout_width="106dp"
                android:layout_height="63dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:background="#00000000"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="Algeria"
                android:textColor="#FFFFFF"
                android:textDirection="firstStrongRtl"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/personPic"
                app:layout_constraintStart_toEndOf="@+id/personPic"
                app:layout_constraintTop_toTopOf="@+id/personPic"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="189dp"
                android:layout_height="59dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#050505"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personPic" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>